{
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "coverage"
  ],
  "include": ["src/**/*.ts", "src/**/*.json"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2021",
    "strict": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "outDir": "dist"
  },
}
